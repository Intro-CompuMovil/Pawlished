<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LoginClienteActivity"
    android:background="@color/blanco"
    android:gravity="center">

    <ImageView
        android:id="@+id/bannerCli"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:paddingBottom="20dp"
        android:src = "@drawable/banner"/>

    <TextView
        android:id="@+id/tituloCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio sesi칩n cliente"
        android:textColor="@color/azul"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:layout_below="@id/bannerCli"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo Electr칩nico"
        android:inputType="textEmailAddress"
        android:textColor="@color/azul"
        android:textColorHint="@color/azul"
        android:layout_below="@id/tituloCli"/>

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:textColor="@color/azul"
        android:textColorHint="@color/azul"
        android:layout_below="@id/emailEditText"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/iniciarSesionButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesi칩n"
            android:backgroundTint="@color/azul"
            android:textColor="@color/blanco"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/registrarClienteButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:backgroundTint="@color/azul"
            android:textColor="@color/blanco"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</RelativeLayout>
