<?xml version="1.0" encoding="utf-8"?>
<!-- item_solicitud.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/blanco">


    <TextView
        android:id="@+id/direccionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

    <TextView
        android:id="@+id/serviciosTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

    <EditText
        android:id="@+id/precioEditTex"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:hint="Escriba su oferta en COP"/>
    <Button
        android:id="@+id/ofertarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ofertar"
        android:backgroundTint="@color/azul"
        android:textColor="@color/verde_claro"/>

</LinearLayout>
