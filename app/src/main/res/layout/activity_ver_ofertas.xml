<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".VerOfertasActivity"
    android:background="@color/blanco">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/azul"
        android:backgroundTint="@color/blanco"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tituloVO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Ofertas Disponibles"
            android:textColor="@color/azul"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <ListView
            android:id="@+id/ofertasListView"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:paddingBottom="20dp"
            android:layout_below="@id/tituloVO"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/volverMainButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Volver al menÃº principal"
            android:backgroundTint="@color/azul"
            android:textColor="@color/blanco"
            android:layout_below="@id/ofertasListView"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

</RelativeLayout>

