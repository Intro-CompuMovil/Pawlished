<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ListView
        android:id="@+id/ofertasListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/volverMainButton"
        android:layout_below="@+id/tituloVO" />

    <Button
        android:id="@+id/volverMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="19dp"
        android:text="Volver al menÃº principal" />

    <Button
        android:id="@+id/tomarOfertaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="20dp"
        android:text="elegir oferta" />

    <TextView
        android:id="@+id/tituloVO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Ofertas Disponibles"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>

