<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".VerSolicitudesAceptadasActivity"
    android:background="@color/verde_claro">

    <ListView
        android:id="@+id/serviciosAceptadosListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- Aquí puedes agregar un espacio o una línea divisoria si lo deseas -->

    <!-- Agrega un botón para guardar los precios -->
    <Button
        android:id="@+id/guardarPreciosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Precios"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/verde_claro"/>

    <!-- Agrega un botón para volver a la actividad principal -->
    <Button
        android:id="@+id/volverMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a la actividad principal"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/verde_claro"/>

</LinearLayout>
