<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivityCliente"
    android:background="@color/blanco">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/azul"
        android:backgroundTint="@color/blanco"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="220dp"
            android:src="@drawable/banner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido al menu principal"
            android:textColor="@color/naranja"
            android:textSize="22dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>

        <Button
            android:id="@+id/solicitarCorteButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Solicitar Corte"
            android:backgroundTint="@color/azul"
            android:textColor="@color/blanco"/>

        <Button
            android:id="@+id/verEstadoButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Ver Estado de Servicios"
            android:backgroundTint="@color/azul"
            android:textColor="@color/blanco"/>

        <Button
            android:id="@+id/verPeluqueriasButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Ver PeluquerÃ­as Cercanas"
            android:backgroundTint="@color/azul"
            android:textColor="@color/blanco"/>

    </LinearLayout>

</RelativeLayout>
